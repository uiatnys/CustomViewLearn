<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CustomView1">
        <attr name="default_text_size" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="BarChart">
        <attr name="bottom_textsize" format="dimension"></attr>   <!--X轴字体大小-->
        <attr name="bar_width" format="dimension"></attr>    <!--单个柱宽度-->
        <attr name="bar_interval" format="dimension"></attr>      <!--柱之间间隔-->
        <attr name="scrollable" format="boolean"></attr>   <!--是否可左右滑动-->
        <attr name="chart_backgroudcolor" format="dimension"></attr>   <!--图表背景颜色-->
        <attr name="touchable" format="boolean"></attr>  <!--柱状图是否可点击-->
    </declare-styleable>

    <declare-styleable name="LineChartDualYAxis">
        <attr name="line_height" format="dimension"></attr>  <!--线条高度-->
        <attr name="line_textsize" format="dimension"></attr>  <!--线条文字大小-->
        <attr name="axis_textsize" format="dimension"></attr>  <!--数轴文字大小-->
    </declare-styleable>
</resources>
